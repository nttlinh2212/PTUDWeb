<!DOCTYPE html>
<html lang="en">

<% include ../elements/head %>

  <body class="fixed-nav sticky-footer" id="page-top">
    <!-- Navigation-->
    <% include navbar %>
      <!-- /Navigation-->
      <div class="content-wrapper">
        <div class="container-fluid">
          <!-- Breadcrumbs-->

          <div class="card mb-3">
            <div class="card-header">
              <h3><i class="fa fa-fw fa-plus-circle"></i> Create Course</h3>
            </div>
            <div class="card-body">
              <form action="/lecturer/add-course-outline" id='frmOutline' onsubmit="submitFormAddCourse()" method="post" enctype="multipart/form-data">
                <!-- Course Outline -->
                <input type="hidden" value="<%= courseID %>" name="courseID">
                <div class="box_general padding_bottom">
                  <div class="header_box version_2">
                    <h2><i class="fa fa-fw fa-archive"></i>Course Outline</h2>
                  </div>

                  <!-- Course Lecture -->
                  <div class="box_general padding_bottom">
                    <input type="hidden" id="lectureOfEachSessionInOrder" name="lectureOfEachSessionInOrder">
                    <h5><button type="button" id="add_Session" onclick="addSession()" class="btn btn-primary"
                        style="height:100%;"><i class="fa fa-fw fa-plus-circle"></i>Add Session</button></h5>

                    <span id="getSessionHere"></span>
                  </div>
                  <button type="submit" class="btn btn-primary">Submit</button>
              </form>
            </div>
          </div>
          <!-- /tables-->
        </div>
        <!-- /container-fluid-->
      </div>
      <!-- /container-wrapper-->
      <% include ../elements/footer %>
        <!-- Scroll to Top Button-->
        <a class="scroll-to-top rounded" href="#page-top">
          <i class="fa fa-angle-up"></i>
        </a>
        <!-- Logout Modal-->
        <% include ../elements/logout%>

          <!-- Bootstrap core JavaScript-->
          <% include ../elements/javascript-addon %>
  </body>

</html>