<!DOCTYPE html>
<html lang="en">

<% include ../elements/head %>

  <body class="fixed-nav sticky-footer" id="page-top">
    <!-- Navigation-->
    <% include navbar %>
      <!-- /Navigation-->
      <div class="content-wrapper">
        <div class="container-fluid">
          <!-- Breadcrumbs-->

          <!-- Example DataTables Card-->
          <div class="card mb-3">
            <div class="card-header">
              <h3><i class="fa fa-fw fa-plus-circle"></i> Create Course</h3>
            </div>
            <div class="card-body">
              <form>

                <div class="form-group input-group-lg">
                  <label for="title"><h5>Title</h5></label>
                  <input type="text" class="form-control" id="title" name="title" placeholder="E.g : Become a fullstack web developer after 1 day">
                </div>
                <div class="form-group input-group-lg">
                  <label for="bigimage"><h5>Image (Big size)</h5></label>
                  <input type="file" class="form-control" id="bigimage" name="bigimage" >
                </div>
                <div class="form-group input-group-lg">
                  <label for="smallimage"><h5>Image (Small size)</h5></label>
                  <input type="file" class="form-control" id="smallimage" name="smallimage" >
                </div>
                <div class="form-group input-group-lg">
                  <label for="price"><h5>Price</h5></label>
                  <input type="number" class="form-control" id="price" name="price" placeholder="E.g : 100000" step = "10000" required min="0">
                </div>
                <div class="form-group input-group-lg">
                  <label for="promotionalPrice"><h5>Promotional Price</h5></label>
                  <input type="number" class="form-control" id="promotionalPrice" name="promotionalPrice" placeholder="E.g : 100000" step = "10000" required min="0">
                </div>

                <div class="form-group input-group-lg">
                  <label for="title"><h5>Title</h5></label>
                  <input type="text" class="form-control" id="title" name="title" placeholder="Enter course's title">
                </div>


                <button type="submit" class="btn btn-primary">Submit</button>
              </form>
            </div>
          </div>
          <!-- /tables-->
        </div>
        <!-- /container-fluid-->
      </div>
      <!-- /container-wrapper-->
      <% include ../elements/footer %>
        <!-- Scroll to Top Button-->
        <a class="scroll-to-top rounded" href="#page-top">
          <i class="fa fa-angle-up"></i>
        </a>
        <!-- Logout Modal-->
        <% include ../elements/logout%>

          <!-- Bootstrap core JavaScript-->
          <% include ../elements/javascript-addon %>
  </body>

</html>