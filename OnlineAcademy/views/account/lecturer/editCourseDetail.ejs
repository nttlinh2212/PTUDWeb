                  language: 'en',
                  theme: 'fa',
                  allowedFileExtensions: ['jpg'],
                  showUpload: false,
                  dropZoneEnabled: false,
                  overwriteInitial: true,
                  autoReplace: true,
                  initialPreview: [
                 
                  "<img src='/images/courses/<%= course.CourseID %>/thumb.jpg' class='file-preview-image' title='Thumb' width='240' >"
                    ,]
       
                });
                

              </script>