<!DOCTYPE html>
<html lang="en">

<% include ../elements/head %>

  <body class="fixed-nav sticky-footer" id="page-top">
    <!-- Navigation-->
    <% include navbar %>
      <!-- /Navigation-->



      <div class="content-wrapper">

  
  
  <form method="POST" action="" enctype="multipart/form-data" id='form'>
    <div class="card">
      <div class="card-header">
        <h4><%= course.title %> </h4>
        <h3><%= lession.namels %> </h4>
      </div> 
      <div class="card-body">
        <input id="course" type = "hidden" name="courseid" value="<%= course.courseid %>">
        <input id="lession" type = "hidden" name="lessionid" value="<%= lession.lessionid %>">
        <div class="form-group">
          <label for="datetimepicker">Duration(s)</label>
          <input type="text" class="form-control" id="datetimepicker" name="duration" readonly>
        </div>
        <div class="form-group">
          <input id="fuMain" name="fuMain" type="file" class="file" multiple required autofocus>
        </div>
      </div>
      <div class="card-footer d-flex justify-content-center">
        <button class="btn btn-lg btn-success" type="submit">
          <i class="fa fa-check" aria-hidden="true"></i>
          Save
        </button>
      </div>
    </div>
  </form>
</div>
<% include ../elements/footer %>
<!-- Scroll to Top Button-->
<a class="scroll-to-top rounded" href="#page-top">
  <i class="fa fa-angle-up"></i>
</a>
<!-- Logout Modal-->
<% include ../elements/logout%>

  <!-- Bootstrap core JavaScript-->
  <% include ../elements/javascript-addon %>
</body>

</html>
  <%- contentFor('css') %>
 <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-fileinput/5.1.3/css/fileinput.min.css">


  <%- contentFor('js') %>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-fileinput/5.1.3/js/fileinput.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-fileinput/5.1.3/themes/fa/theme.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-fileinput/5.1.3/js/locales/vi.min.js"></script>
  <script>
    
    $('#fuMain').fileinput({
      language: 'en',
      theme: 'fa',
      allowedFileExtensions: ['mp4'],
      showUpload: false,

      dropZoneEnabled: false,
      
    });
    var vid = document.createElement('video');
    document.querySelector('#fuMain').addEventListener('change', function() {
        //alert('change');
        var fileURL = URL.createObjectURL(this.files[0]);
        vid.src = fileURL;
        vid.ondurationchange = function() {
    
            $('#datetimepicker').val(this.duration);
            
        };
    });
    
  </script>
  