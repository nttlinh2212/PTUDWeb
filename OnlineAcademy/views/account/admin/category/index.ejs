<!DOCTYPE html>
<html lang="en">

<% include ../../elements/head %>

  <body class="fixed-nav sticky-footer" id="page-top">
    <!-- Navigation-->
    <% include ../navbar %>
      <!-- /Navigation-->
      <div class="content-wrapper">
        <div class="container-fluid">
          <!-- Breadcrumbs-->

          <!-- Example DataTables Card-->
          <div class="card mb-3">
            <div class="card-header">
              <div class="form-group" style="margin-bottom:0px;">
                <button type="button" onclick="submitAddCategory1()" class="btn btn-primary">Add
                  Category 1</button>
              </div>
            </div>
            <div class="card-body">
              <div class="row">
                <div class="col-md-5">
                  <div class="form-group">
                    <label for="exampleFormControlSelect1">CATEGORY 1</label>
                    <select autofocus class="form-control" onchange="getCat2Admin(this.value)" id="admin_Cat1ID">
                      <option value="0">Select one</option>
                      <% cat1.forEach(function(itemCat1){ %>
                        <option value="<%= itemCat1.Cat1ID%>">
                          <%= itemCat1.Cat1Name%>
                        </option>
                        <% }) %>
                    </select>
                  </div>
                </div>
                <div class="col-md-5">
                  <div class="form-group ">
                    <label>EDIT CATEGORY 1</label>
                    <input type="text" class="form-control form-control-lg" style="height: 45px; font-size: 1rem;"
                      placeholder="Enter New Name" id="textEditCat1">
                  </div>
                </div>
                <div class="col-md-1" style="padding-left:0px; padding-top:31px;">
                  <div class="form-group">
                    <button type="button" onclick="submitEditCat1()" class="btn btn-primary"
                      style="height: 45px; margin-left: 5px;">Submit</button>
                  </div>
                </div>
                <div class="col-md-1" style="padding-left:0px; padding-top:31px;">
                  <div class="form-group">
                    <button type="button" class="btn btn-danger" style="height: 45px;" onclick="deleteCategory1()">Delete</button>
                  </div>
                </div>
              </div>

              <div class="row">
                <div class="col-md-5">
                  <div class="form-group ">
                    <label>ADD CATEGORY 2</label>
                    <input type="text" class="form-control form-control-lg" style="height: 45px; font-size: 1rem;"
                      placeholder="Enter New Name" id="textAddCategory2">
                  </div>
                </div>
                <div class="col-md-5" style="padding-left:0px; padding-top:31px;">
                  <div class="form-group">
                    <button type="button" onclick="submitAddCategory2()" class="btn btn-primary"
                      style="height: 45px; margin-left: 10px;">Add
                      Category 2</button>
                  </div>
                </div>
              </div>

              <br>
              <div class="">
                <table class="table table-bordered table-dark text-center" id="" width="100%" cellspacing="0">
                  <thead>
                    <tr>
                      <th style="width: 20%;">Category 2</th>
                      <th style="width: 80%;">Edit</th>
                      <th style="width: 10%;">Delete</th>
                    </tr>
                  </thead>
                  <tfoot>
                    <tr>
                      <th colspan="3">END</th>
                    </tr>
                  </tfoot>
                  <tbody id="admin_category_table_tbody">
                  </tbody>
                </table>
              </div>
            </div>
          </div>
          <!-- /tables-->
        </div>
        <!-- /container-fluid-->
      </div>
      <!-- /container-wrapper-->
      <% include ../../elements/footer %>
        <!-- Scroll to Top Button-->
        <a class="scroll-to-top rounded" href="#page-top">
          <i class="fa fa-angle-up"></i>
        </a>
        <!-- Logout Modal-->
        <% include ../../elements/logout%>

          <!-- Bootstrap core JavaScript-->
          <% include ../../elements/javascript-addon %>
  </body>

</html>