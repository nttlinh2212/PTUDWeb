<!DOCTYPE html>
<html lang="en">

<% include ../../elements/head %>

  <body class="fixed-nav sticky-footer" id="page-top" onload="renderCourseTable()">
    <!-- Navigation-->
    <% include ../navbar %>
      <!-- /Navigation-->
      <div class="content-wrapper">
        <div class="container-fluid">
          <!-- Breadcrumbs-->

          <div class="card mb-3">
            <div class="card-header">
              <div class="form-group" style="margin-bottom:0px;">
                <h2>Admin - Manage Course</h2>
              </div>
            </div>
            <div class="card-body">


              <div class="row" style="margin-top:20px;">
                <div class="col input-group-lg">
                  <label for="Cat1ID">
                    <h5>Category</h5>
                  </label>
                  <select class="form-control form-control-lg" onchange="filterCourse()" name="Cat1ID" id="Cat1ID">
                  </select>
                </div>
                <div class="col input-group-lg">
                  <label for="Lecturer">
                    <h5>Lecturer</h5>
                  </label>
                  <select class="form-control form-control-lg" onchange="filterCourse()" name="Lecturer" id="Lecturer">
                  </select>
                </div>
              </div>

              <br><br><br>
              <br><br><br>



              <table class="table table-bordered table-hover table-dark text-center" id="" width="100%" cellspacing="0">
                <thead>
                  <tr>
                    <th style="width: 50%;">Course title</th>
                    <th style="width: 20%;">Lecturer</th>
                    <th style="width: 10%;">Students</th>
                    <th style="width: 10%;">Block</th>
                    <th style="width: 10%;">Delete</th>
                  </tr>
                </thead>
                <tfoot>
                  <tr>
                    <th colspan="5">END</th>
                  </tr>
                </tfoot>
                <tbody id="admin_course_table_tbody">
                </tbody>
              </table>
            </div>
          </div>
          <!-- /tables-->
        </div>
        <!-- /container-fluid-->
      </div>
      <!-- /container-wrapper-->
      <% include ../../elements/footer %>
        <!-- Scroll to Top Button-->
        <a class="scroll-to-top rounded" href="#page-top">
          <i class="fa fa-angle-up"></i>
        </a>
        <!-- Logout Modal-->
        <% include ../../elements/logout%>

          <!-- Bootstrap core JavaScript-->
          <% include ../../elements/javascript-addon %>
  </body>

</html>