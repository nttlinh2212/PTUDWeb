<!DOCTYPE html>
<html lang="en">

<% include ../elements/head %>

  <body class="fixed-nav sticky-footer" id="page-top">
    <!-- Navigation-->
    <% include navbar %>
      <!-- /Navigation-->
      <div class="content-wrapper">
        <div class="container-fluid">
          <div class="card mb-3">
            <div class="card-header">
              <i class="fa fa-fw fa-address-book"></i> My Profile
            </div>
            <div class="card-body">
              <div class="row">
                <div class="col-md-6">
                  <div class="box_general padding_bottom">
                    <div class="header_box version_2">
                      <h2><i class="fa fa-lock" style="color: black;"></i>Change password</h2>
                    </div>
                    <div class="form-group">
                      <label>Old password</label><span id="messageOldPassword" style="margin-left: 20px;"></span>
                      <input class="form-control" minlength="5" maxlength="15" type="password" id="oldPassword" onkeyup="confirmOldPassword('oldPassword','messageOldPassword')">
                    </div>
                    <div class="form-group">
                      <label>New password</label><span id="messagePassword" style="margin-left: 20px;"></span>
                      <input class="form-control" minlength="5" maxlength="15" type="password" id="password" onkeyup="checkConfirmAdmin()">
                    </div>
                    <div class="form-group">
                      <label>Confirm new password</label><span id="messageConfirm" style="margin-left: 20px;"></span>
                      <input class="form-control" minlength="5" maxlength="15" type="password" id="confirmPassword" onkeyup="checkConfirmAdmin()">
                    </div>
                  </div>
                </div>
                <div class="col-md-6">
                  <div class="box_general padding_bottom">
                    <div class="header_box version_2">
                      <h2><i class="fa fa-envelope" style="color: black;"></i>Change email</h2>
                    </div>
                    <div class="form-group">
                      <label>Old email</label><span id="messageOldEmail" style="margin-left: 20px;"></span>
                      <input class="form-control" name="old_email" id="old_email" type="email" minlength="5" maxlength="15" onkeyup="checkEmailAdmin('old_email','messageOldEmail')" >
                    </div>
                    <div class="form-group">
                      <label>New email</label><span id="messageNewEmail" style="margin-left: 20px;"></span>
                      <input class="form-control" name="newEmail" id="newEmail" type="email" minlength="5" maxlength="15" onkeyup="confirmEmail('newEmail','messageNewEmail','confirmNewEmail','messageConfirmNewEmail')">
                    </div>
                    <div class="form-group">
                      <label>Confirm new email</label><span id="messageConfirmNewEmail" style="margin-left: 20px;"></span>
                      <input class="form-control" name="confirmNewEmail" id="confirmNewEmail" type="email" minlength="5" maxlength="15" onkeyup="confirmEmail('newEmail','messageNewEmail','confirmNewEmail','messageConfirmNewEmail')">
                    </div>
                  </div>
                </div>
              </div>
              <div class="row">
                <div class="col-md-6">
                  <button class="btn_1 medium" onclick="submitChangeAdminPassword()">Save</button>
                </div>
                <div class="col-md-6">
                  <button class="btn_1 medium" onclick="submitChangeAdminEmail()">Save</button>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      <!-- /container-wrapper-->
      <% include ../elements/footer %>
        <!-- Scroll to Top Button-->
        <a class="scroll-to-top rounded" href="#page-top">
          <i class="fa fa-angle-up"></i>
        </a>
        <!-- Logout Modal-->
        <% include ../elements/logout%>

          <!-- Bootstrap core JavaScript-->
          <% include ../elements/javascript-addon %>
  </body>

</html>