<div id="page">
    <%- include('header') %>
        <main>
            <section class="hero_single version_2">
                <div id="hero_video">
                    <div>
                        <h3><strong>Top courses</strong><br>on EduPlus</h3>
                        <p>Explore and learn new skills <strong>every where and every time</strong> with us.</p>
                    </div>
                    <a href="#first-section" class="btn_explore hidden_tablet"><i class="ti-arrow-down"></i></a>
                </div>
            </section>

            <div class="features clearfix">
                <div class="container">
                    <ul>
                        <li><i class="pe-7s-study"></i>
                            <h4>+200 courses</h4><span>Explore a variety of fresh topics</span>
                        </li>
                        <li><i class="pe-7s-cup"></i>
                            <h4>Expert teachers</h4><span>Find the right instructor for you</span>
                        </li>
                        <li><i class="pe-7s-target"></i>
                            <h4>Focus on target</h4><span>Increase your personal expertise</span>
                        </li>
                    </ul>
                </div>
            </div>
            <!-- /features -->
            <div id="first-section" class="container-fluid margin_120_0">
                <div class="main_title_2">
                    <span><em></em></span>
                    <h2>Top Hot Courses</h2>
                </div>
                <div id="reccomended" class="owl-carousel owl-theme">
                    <% top4HotCoursesLastWeek.forEach(element => { %>
                        <!-- /item -->
                        <div class="item">
                            <div class="box_grid">
                                <figure>
                                    <a href="#0" class="wish_bt"></a>
                                    <a href="/"><img src="http://via.placeholder.com/800x533/ccc/fff/course__list_3.jpg" class="img-fluid" alt=""></a>
                                    <div class="price">
                                        <%= element.promotional_price %> VND
                                    </div>
                                    <div class="preview"><span>Preview course</span></div>
                                </figure>
                                <div class="wrapper">
                                    <small><%= element.Cat2Name %></small>
                                    <h3>
                                        <%= element.title %>
                                    </h3>
                                    <p>
                                        <%= element.full_name %>
                                    </p>
                                    <div class="rating">
                                        <i class="icon_star voted"></i><i class="icon_star voted"></i><i class="icon_star voted"></i><i class="icon_star"></i><i class="icon_star"></i></div>
                                </div>
                                <ul>
                                    <li><i class="fa fa-eye" aria-hidden="true"></i>
                                        <%= element.views %>
                                    </li>
                                    <li><a href="/">Enroll now</a></li>
                                </ul>
                            </div>
                        </div>
                        <% }) %>
                </div>
            </div>
            <div class="container-fluid margin_120_0">
                <div class="main_title_2">
                    <span><em></em></span>
                    <h2>Top 10 Popular Courses</h2>
                </div>
                <div id="top10CoursesByViews" class="owl-carousel owl-theme">
                    <% top10CoursesByViews.forEach(element => { %>
                        <!-- /item -->
                        <div class="item">
                            <div class="box_grid">
                                <figure>
                                    <a href="#0" class="wish_bt"></a>
                                    <a href="/"><img src="http://via.placeholder.com/800x533/ccc/fff/course__list_3.jpg" class="img-fluid" alt=""></a>
                                    <div class="price">
                                        <%= element.promotional_price %> VND
                                    </div>
                                    <div class="preview"><span>Preview course</span></div>
                                </figure>
                                <div class="wrapper" style="height: 14em;">
                                    <small><%= element.Cat2Name %></small>
                                    <h3>
                                        <%= element.title %>
                                    </h3>
                                    <p>
                                        <%= element.full_name %>
                                    </p>
                                    <div class="rating">
                                        <i class="icon_star voted"></i><i class="icon_star voted"></i><i class="icon_star voted"></i><i class="icon_star"></i><i class="icon_star"></i></div>
                                </div>
                                <ul>
                                    <li><i class="fa fa-eye" aria-hidden="true"></i>
                                        <%= element.views %>
                                    </li>
                                    <li><a href="/">Enroll now</a></li>
                                </ul>
                            </div>
                        </div>
                        <% }) %>

                </div>
                <div class="container-fluid margin_120_0">
                    <div class="main_title_2">
                        <span><em></em></span>
                        <h2>Top 10 New Courses</h2>
                    </div>
                    <div id="top10NewCourses" class="owl-carousel owl-theme">
                        <% top10NewCourses.forEach(element => { %>
                            <!-- /item -->
                            <div class="item">
                                <div class="box_grid">
                                    <figure>
                                        <a href="#0" class="wish_bt"></a>
                                        <a href="/"><img src="http://via.placeholder.com/800x533/ccc/fff/course__list_3.jpg" class="img-fluid" alt=""></a>
                                        <div class="price">
                                            <%= element.promotional_price %> VND
                                        </div>
                                        <div class="preview"><span>Preview course</span></div>
                                    </figure>
                                    <div class="wrapper" style="height: 14em;">
                                        <small><%= element.Cat2Name %></small>
                                        <h3>
                                            <%= element.title %>
                                        </h3>
                                        <p>
                                            <%= element.full_name %>
                                        </p>
                                        <div class="rating ">
                                            <i class="icon_star voted "></i><i class="icon_star voted "></i><i class="icon_star voted "></i><i class="icon_star "></i><i class="icon_star "></i></div>
                                    </div>
                                    <ul>
                                        <li><i class="icon_clock_alt "></i>
                                            <%= element.date_public.substring(0,10) %>
                                        </li>
                                        <li><a href="/">Enroll now</a></li>
                                    </ul>
                                </div>
                            </div>
                            <% }) %>
                    </div>
                </div>
                <div class="container margin_120_0 ">
                    <div class="main_title_2 ">
                        <span><em></em></span>
                        <h2>Hot Topics</h2>
                    </div>
                    <div class="row ">
                        <% top4Cat1BuyLastWeek.forEach(element => { %>
                            <div class="col-3 wow " data-wow-offset="150 ">
                                <a href="/" class="grid_item ">
                                    <figure class="block-reveal ">
                                        <div class="block-horizzontal "></div>
                                        <img src="http://via.placeholder.com/800x533/ccc/fff/course_1.jpg " class="img-fluid " alt=" ">
                                        <div class="info ">
                                            <small><i class="ti-layers "></i>Number of Courses</small>
                                            <h3>
                                                <%= element.Cat1Name %>
                                            </h3>
                                        </div>
                                    </figure>
                                </a>
                            </div>
                            <% }) %>
                    </div>
                    <!-- /row -->
                </div>
        </main>
        <!-- /main -->
        <%- include('footer') %>

            </div>
            <!-- page -->
            <%- contentFor('css') %>
                <link rel="stylesheet" href="/stylesheets/css/animate.min.css">
                <link rel="stylesheet" href="/stylesheets/css/bootstrap-dropdownhover.min.css">
                <link href="/stylesheets/css/style.css " rel="stylesheet ">
                <link href="/stylesheets/css/vendors.css " rel="stylesheet ">
                <link href="/stylesheets/css/icon_fonts/css/all_icons.min.css " rel="stylesheet ">
                <style>
                    .dropdown-submenu {
                        position: relative;
                    }
                    
                    .dropdown-submenu .dropdown-menu {
                        top: 0;
                        left: 100%;
                        margin-top: -1px;
                    }
                </style>
                <%- contentFor('js') %>
                    <script src="/javascripts/js/jquery-2.2.4.min.js "></script>
                    <script src="/javascripts/js/common_scripts.js "></script>
                    <script src="/javascripts/js/main.js "></script>
                    <script src="/javascripts/assets/validate.js "></script>
                    <script src="/javascripts/home.js "></script>