    <ul class="pagination justify-content-end pagination-lg">
        <% 
        if(currentPage> 1){
            let pathPrevious = path + (currentPage - 1);
        %>
            <li class="page-item ">
                <a class="page-link" href="<%= pathPrevious %>" tabindex="-1">Previous</a>
            </li>
            <% 
        } 
        else{ 
        %>
                <li class="page-item disabled">
                    <a class="page-link" href="" tabindex="-1">Previous</a>
                </li>
                <% 
        }
        %>


                    <%
