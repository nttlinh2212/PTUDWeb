<header class="header menu_2">
    <div id="preloader">
        <div data-loader="circle-side"></div>
    </div>
    <!-- /Preload -->
    <div id="logo">
        <a href="/"><img src="/images/img/logo1.png"></a>
    </div>
    <ul id="top_menu">
        <li>
            <div id="searchdropdown" class='dropdown nav-item form-inline ml-auto '>
                <form id="searcharea" method="GET" action="/course/search">
                    <div class="form-group has-white">
                        <input id="searchbar" type="text" class="form-control" placeholder="Search" name="key">
                    </div>
                </form>
                <div id="resultbar" class="dropdown-menu-spec dropdown-with-icons"></div>
            </div>
        </li>
        <li>
            <a href="#"><img src="/images/img/cart.png"></a>
        </li>
        <% if(locals.auth == false){ %>

            <li class="hidden_tablet"><a href="/account/login" class="btn_1 rounded">Sign In</a></li>
            <li class="hidden_tablet"><a href="/account/register" class="btn_2 rounded">Sign Up</a></li>
            <% }else{ %>
                <li class="dropdown nav-item">
                    <a href="#" class="dropdown-toggle nav-link" data-toggle="dropdown">
                        <i class="fa fa-user-circle" aria-hidden="true"></i> Hi
                        <%= locals.authUser.full_name %>
                    </a>
                    <div class="dropdown-menu dropdown-menu-spec dropdown-with-icons">
                        <a href="/customer/profile" class="dropdown-item" style="color: black; font-size: 0.75rem;">
                            <i class="icon-edit"></i> &nbsp;&nbsp; Manage Account
                        </a>
                        <a href="/logout" class="dropdown-item" style="color: black; font-size: 0.75rem;">
                            <i class="icon-logout"></i> &nbsp;&nbsp; Sign Out
                        </a>
                    </div>
                </li>
                <% } %>
    </ul>
    <!-- /top_menu -->
    <a href="#menu" class="btn_mobile">
        <div class="hamburger hamburger--spin" id="hamburger">
            <div class="hamburger-box">
                <div class="hamburger-inner"></div>
            </div>
        </div>
    </a>
    <nav id="menu" class="main-menu">
        <ul>
            <li><span><a href="/">Home</a></span></li>
            <li><span><a href="#0">Categories</a></span>
                <ul class="dropdown-menu" role="menu">
                    <% lstCat1.forEach(element => { %>
                        <li class="dropdown-submenu">
                            <a href="/course/byCat1/<%= element.Cat1ID %>">
                                <%= element.Cat1Name %> <span class="caret"></span></a>
                            <ul class="dropdown-menu">
                                <% lstCat2[element.Cat1ID - 1].forEach(ele => { %>
                                    <li>
                                        <a href="/course/byCat2/<%= ele.Cat2ID %> ">
                                            <%= ele.Cat2Name %>
                                        </a>
                                    </li>
                                    <% }) %>
                            </ul>
                        </li>
                        <% }) %>
                </ul>
            </li>
        </ul>
    </nav>
</header>